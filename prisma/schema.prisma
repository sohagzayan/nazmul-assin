model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String    @unique
  email     String    @unique
  password  String
  teams     Team[]    @relation("TeamCreator")
  projects  Project[] @relation("ProjectCreator")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Team {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  createdById String       @db.ObjectId
  createdBy   User         @relation("TeamCreator", fields: [createdById], references: [id])
  members     TeamMember[]
  projects    Project[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model TeamMember {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  role      String
  capacity  Int      @default(0)
  teamId    String   @db.ObjectId
  team      Team     @relation(fields: [teamId], references: [id])
  taskLoad  Task[]   @relation("MemberTasks")
  logsFrom  ActivityLog[] @relation("LogFromMember")
  logsTo    ActivityLog[] @relation("LogToMember")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  teamId       String        @db.ObjectId
  team         Team          @relation(fields: [teamId], references: [id])
  createdById  String        @db.ObjectId
  createdBy    User          @relation("ProjectCreator", fields: [createdById], references: [id])
  tasks        Task[]
  activityLogs ActivityLog[] @relation("ProjectActivityLogs")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Task {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  title            String
  description      String
  projectId        String         @db.ObjectId
  project          Project        @relation(fields: [projectId], references: [id])
  assignedMemberId String?        @db.ObjectId
  assignedMember   TeamMember?    @relation("MemberTasks", fields: [assignedMemberId], references: [id])
  priority         Priority
  status           TaskStatus
  activityLogs     ActivityLog[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model ActivityLog {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  message      String
  type         ActivityLogType
  taskId       String?       @db.ObjectId
  task         Task?         @relation(fields: [taskId], references: [id])
  projectId    String?       @db.ObjectId
  project      Project?      @relation("ProjectActivityLogs", fields: [projectId], references: [id])
  fromMemberId String?       @db.ObjectId
  fromMember   TeamMember?   @relation("LogFromMember", fields: [fromMemberId], references: [id])
  toMemberId   String?       @db.ObjectId
  toMember     TeamMember?   @relation("LogToMember", fields: [toMemberId], references: [id])
  timestamp    DateTime      @default(now())
}
